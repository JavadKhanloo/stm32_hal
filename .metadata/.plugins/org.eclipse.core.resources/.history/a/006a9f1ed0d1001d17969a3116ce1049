//-----------------------------------------------------------------------//
// header section                                                        //
//-----------------------------------------------------------------------//
#include "main.h"
#include "rcc.h"
#include "uart.h"
//-----------------------------------------------------------------------//

//-----------------------------------------------------------------------//
// main function                                                         //
//-----------------------------------------------------------------------//
int main()
{
  HAL_Init();
  // clock
  rcc_system_clock_config();

  // uart
  uart_UART1_GPIO_config();
  uart_UART1_config();

  HAL_Delay(1);
  printf("program is starting...\r\n");
  int counter = 0;

  while (1)
  {
    printf("counter : %d\r\n", counter++);
    HAL_Delay(1000);
  }
}

//-----------------------------------------------------------------------//
